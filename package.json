{
  "name": "nestjs-metrics-client",
  "version": "1.0.0",
  "description": "A global static Prometheus metrics reporter for NestJS applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "jest debug --runInBand --detectOpenHandles",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rimraf dist",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "nestjs",
    "prometheus",
    "metrics",
    "monitoring",
    "global",
    "reporter",
    "prometheus-client",
    "prom-client"
  ],
  "author": {
    "name": "Netanel Avraham",
    "url": "https://github.com/netanelav"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netanelav/nestjs-metrics-client.git"
  },
  "bugs": {
    "url": "https://github.com/netanelav/nestjs-metrics-client/issues"
  },
  "homepage": "https://github.com/netanelav/nestjs-metrics-client#readme",
  "peerDependencies": {
    "@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0",
    "@nestjs/core": "^8.0.0 || ^9.0.0 || ^10.0.0",
    "prom-client": "^14.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "5.3"
  },
  "dependencies": {
    "semantic-release": "^24.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}